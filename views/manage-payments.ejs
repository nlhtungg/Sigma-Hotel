<!DOCTYPE html>
<html>
    <head>
        <title>Manage Payments</title>
        <!-- Embed fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
            rel="stylesheet"
        />

        <!-- Reset CSS -->
        <link rel="stylesheet" href="/css/reset.css" />

        <!-- Style -->
        <link rel="stylesheet" href="/css/common.css" />
        <link rel="stylesheet" href="/css/form.css" />
        <link rel="stylesheet" href="/css/table.css" />

        <script>
            // Filter Open Function
            function FilterOpen() {
                document.getElementById("filter-form").style.display = "block";
                document.getElementById("overlay").style.display = "block";
            }
            // Filter Close Function
            function FilterClose() {
                document.getElementById("filter-form").style.display = "none";
                document.getElementById("overlay").style.display = "none";
            }
        </script>
    </head>
    <body>
        <!-- Overlay -->
        <div id="overlay" class="overlay" style="display: none"></div>

        <!-- Header bar -->
        <div class="header-bar">
            <div class="header-bar__inner">
                <!-- Logo -->
                <a href="/admin">
                    <div class="logo">
                        <span class="sigma">Sigma</span>
                        <br />
                        Hotel
                    </div>
                </a>

                <!-- Navbar -->
                <nav class="navbar">
                    <ul class="navbar__list">
                        <li class="navbar__item">
                            <a href="/manage-users" class="navbar__link">
                                Users
                            </a>
                        </li>
                        <li class="navbar__item">
                            <a href="/manage-staffs" class="navbar__link">
                                Staffs
                            </a>
                        </li>
                        <li class="navbar__item">
                            <a href="/manage-rooms" class="navbar__link">
                                Rooms
                            </a>
                        </li>
                        <li class="navbar__item">
                            <a href="/manage-bookings" class="navbar__link">
                                Bookings
                            </a>
                        </li>
                        <li class="navbar__item">
                            <a
                                href="/manage-payments"
                                class="navbar__link"
                                style="text-decoration: underline"
                            >
                                Payments
                            </a>
                        </li>
                    </ul>
                </nav>

                <!-- Action -->
                <div class="header-action">
                    <a href="login" class="btn signup">Logout</a>
                </div>
            </div>
        </div>

        <!-- Filter form -->
        <form
            id="filter-form"
            class="popUp-form"
            action="/manage-payments"
            method="GET"
            style="display: none"
        >
            <h2 class="subsection-title">Filter</h2>
            <div class="form-item">
                <label for="filterGuest">Guest ID:</label>
                <input
                    class="form-input"
                    type="number"
                    id="filterGuest"
                    name="filterGuest"
                />
            </div>

            <div class="form-item">
                <label for="filterAmount">Total Amount:</label>
                <input
                    class="form-input"
                    type="number"
                    id="filterAmount"
                    name="filterAmount"
                />
            </div>

            <div class="form-item">
                <label for="filterMethod">Payment Method:</label>
                <select
                    class="form-input"
                    name="filterMethod"
                    id="filterMethod"
                    size="1"
                >
                    <option value=""></option>
                    <option value="Credit Card">Credit Card</option>
                    <option value="Cash">Cash</option>
                </select>
            </div>

            <div class="form-item">
                <label for="orderBy">Order By:</label>
                <select class="form-input" name="orderBy" id="orderBy" size="1">
                    <option value="Payment.BookingID">Booking ID</option>
                    <option value="Payment.PaymentID">Payment ID</option>
                    <option value="Booking.GuestID">Guest ID</option>
                    <option value="Payment.Amount">Amount</option>
                    <option value="PDate">Payment Date</option>
                    <option value="Payment.PaymentMethod">
                        Payment Method
                    </option>
                </select>
            </div>

            <div class="form-item">
                <label for="desc">Sort:</label>
                <select class="form-input" name="desc" id="desc" size="1">
                    <option value="ASC">ASC</option>
                    <option value="DESC">DESC</option>
                </select>
            </div>

            <div class="form-item">
                <button class="table-btn table-btn__add" type="submit">
                    Apply Filter
                </button>
                <button
                    class="table-btn table-btn__delete"
                    onclick="FilterClose()"
                >
                    Cancel
                </button>
            </div>
        </form>

        <div class="container">
            <header>
                <h1 class="section-title">Manage Payments</h1>
            </header>

            <!-- Top Button Open -->
            <div class="top-btn__wrap">
                <button
                    class="top-btn table-btn"
                    id="filter-btn"
                    onclick="FilterOpen()"
                >
                    Filter
                </button>
            </div>

            <main>
                <h2 class="subsection-title">Payments List</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Payment ID</th>
                            <th>Booking ID</th>
                            <th>Guest ID</th>
                            <th>Total Amount</th>
                            <th>Payment Date</th>
                            <th>Payment Method</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% payments.forEach(payment => { %>
                        <tr>
                            <td><%= payment.PaymentID %></td>
                            <td><%= payment.BookingID %></td>
                            <td><%= payment.GuestID %></td>
                            <td><%= payment.Amount %></td>
                            <td><%= payment.PDate %></td>
                            <td><%= payment.PaymentMethod %></td>
                        </tr>
                        <% }) %>
                        <!-- Add more rows as needed -->
                    </tbody>
                </table>
            </main>
        </div>

        <!-- Footer -->
        <footer>
            <div id="contact" class="container">
                <h2 class="section-title footer-title">Get in Touch</h2>
                <div class="footer-content">
                    <ul class="footer-left">
                        <h3 class="subsection-title">Quick link</h3>
                        <a href="#!" class="footer-link"
                            ><li class="footer-item">Home</li></a
                        >
                        <a href="#!" class="footer-link"
                            ><li class="footer-item">Services</li></a
                        >
                        <a href="#!" class="footer-link"
                            ><li class="footer-item">About us</li></a
                        >
                        <a href="#!" class="footer-link"
                            ><li class="footer-item">Contact</li></a
                        >
                    </ul>
                    <div class="footer-middle">
                        <p class="section-desc footer-desc">
                            Lorem ipsum, dolor sit amet consectetur adipisicing
                            elit. Officia eaque incidunt ea aut iure.
                            Blanditiis.
                        </p>
                        <form action="" class="footer-form">
                            <div class="footer-input">
                                <input
                                    type="text"
                                    name=""
                                    id=""
                                    placeholder="Enter Edging Email"
                                    class="footer-info"
                                />
                                <input
                                    type="submit"
                                    value="Submit"
                                    class="footer-info"
                                />
                            </div>
                        </form>
                    </div>
                    <ul class="footer-right">
                        <h3 class="subsection-title">Useful</h3>
                        <a href="#!" class="footer-link">
                            <li class="footer-item">Privacy policy</li>
                        </a>
                        <a href="#!" class="footer-link"
                            ><li class="footer-item">Legal</li></a
                        >
                        <a href="#!" class="footer-link"
                            ><li class="footer-item">FAQ</li></a
                        >
                        <a href="#!" class="footer-link"
                            ><li class="footer-item">Blogs</li></a
                        >
                    </ul>
                </div>
            </div>
        </footer>
    </body>
</html>
