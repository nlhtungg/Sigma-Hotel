<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Edit User</title>

        <!-- Embed fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
            rel="stylesheet"
        />

        <!-- Reset CSS -->
        <link rel="stylesheet" href="/css/reset.css" />

        <!-- Style -->
        <link rel="stylesheet" href="/css/common.css" />
        <link rel="stylesheet" href="/css/table.css" />
        <link rel="stylesheet" href="/css/form.css" />
    </head>

    <body>
        <!-- Header bar -->
        <div class="header-bar">
            <div class="header-bar__inner">
                <!-- Logo -->
                <a href="/admin">
                    <div class="logo">
                        <span class="sigma">Sigma</span>
                        <br />
                        Hotel
                    </div>
                </a>

                <!-- Navbar -->
                <nav class="navbar">
                    <ul class="navbar__list">
                        <li class="navbar__item">
                            <a
                                href="/manage-users"
                                class="navbar__link"
                                style="text-decoration: underline"
                            >
                                Users
                            </a>
                        </li>
                        <li class="navbar__item">
                            <a href="/manage-staffs" class="navbar__link">
                                Staffs
                            </a>
                        </li>
                        <li class="navbar__item">
                            <a href="/manage-rooms" class="navbar__link">
                                Rooms
                            </a>
                        </li>
                        <li class="navbar__item">
                            <a href="/manage-bookings" class="navbar__link">
                                Bookings
                            </a>
                        </li>
                        <li class="navbar__item">
                            <a href="/manage-payments" class="navbar__link">
                                Payments
                            </a>
                        </li>
                    </ul>
                </nav>

                <!-- Action -->
                <div class="navbar-action">
                    <a href="/login" class="btn signup">Logout</a>
                </div>
            </div>
        </div>

        <div class="form-change">
            <h1 class="section-title">Edit User</h1>
            <form action="/edit-user" method="POST">
                <input
                    type="hidden"
                    name="guestID"
                    class="form-input"
                    value="<%= user.GuestID %>"
                />
                <div class="form-item">
                    <label class="subsection-title" for="name">Name:</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        class="form-input"
                        value="<%= user.Name %>"
                    />
                </div>
                <div class="form-item">
                    <label class="subsection-title" for="dob"
                        >Date of Birth:</label
                    >
                    <input
                        type="date"
                        id="dob"
                        name="dob"
                        class="form-input"
                        value="<%= user.DOB.toISOString().substring(0, 10) %>"
                    />
                </div>
                <div class="form-item">
                    <label class="subsection-title" for="address"
                        >Address:</label
                    >
                    <input
                        type="text"
                        id="address"
                        name="address"
                        class="form-input"
                        value="<%= user.Address %>"
                    />
                </div>
                <div class="form-item">
                    <label class="subsection-title" for="phone">Phone:</label>
                    <input
                        type="text"
                        id="phone"
                        name="phone"
                        class="form-input"
                        value="<%= user.Phone %>"
                    />
                </div>
                <div class="form-item">
                    <label class="subsection-title" for="email">Email:</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="form-input"
                        value="<%= user.Email %>"
                    />
                </div>
                <div class="form-item">
                    <label class="subsection-title" for="newpassword"
                        >New Password:</label
                    >
                    <input
                        type="password"
                        id="newpassword"
                        name="newpassword"
                        class="form-input"
                    />
                </div>
                <div class="form-item">
                    <button class="table-btn table-btn__add" type="submit">
                        Save Changes
                    </button>
                </div>
            </form>
            <form action="manage-staffs.ejs" method="get">
                <button
                    class="table-btn table-btn__delete"
                    type="submit"
                    formaction="/manage-users"
                    formmethod="get"
                >
                    Cancel
                </button>
            </form>
        </div>
    </body>
</html>
