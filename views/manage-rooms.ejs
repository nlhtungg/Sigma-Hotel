<!DOCTYPE html>
<html>
    <head>
        <title>Manage Users</title>

        <!-- Embed fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
            rel="stylesheet"
        />

        <!-- Reset CSS -->
        <link rel="stylesheet" href="/css/reset.css" />

        <!-- Style -->
        <link rel="stylesheet" href="/css/common.css" />
        <link rel="stylesheet" href="/css/form.css" />
        <link rel="stylesheet" href="/css/table.css" />
        <script>
            // Add Open Function
            function AddOpen() {
                document.getElementById("add-form").style.display = "block";
                document.getElementById("overlay").style.display = "block";
            }
            // Add Close Function
            function AddClose() {
                document.getElementById("add-form").style.display = "none";
                document.getElementById("overlay").style.display = "none";
            }

            // Filter Open Function
            function FilterOpen() {
                document.getElementById("filter-form").style.display = "block";
                document.getElementById("overlay").style.display = "block";
            }
            // Filter Close Function
            function FilterClose() {
                document.getElementById("filter-form").style.display = "none";
                document.getElementById("overlay").style.display = "none";
            }
        </script>
    </head>
    <body>
        <!-- Overlay -->
        <div id="overlay" class="overlay" style="display: none"></div>

        <!-- Header bar -->
        <div class="header-bar">
            <div class="header-bar__inner">
                <!-- Logo -->
                <a href="/admin">
                    <div class="logo">
                        <span class="sigma">Sigma</span>
                        <br />
                        Hotel
                    </div>
                </a>

                <!-- Navbar -->
                <nav class="navbar">
                    <ul class="navbar__list">
                        <li class="navbar__item">
                            <a href="/manage-users" class="navbar__link">
                                Users
                            </a>
                        </li>
                        <li class="navbar__item">
                            <a href="/manage-staffs" class="navbar__link">
                                Staffs
                            </a>
                        </li>
                        <li class="navbar__item">
                            <a
                                href="/manage-rooms"
                                class="navbar__link"
                                style="text-decoration: underline"
                            >
                                Rooms
                            </a>
                        </li>
                        <li class="navbar__item">
                            <a href="/manage-bookings" class="navbar__link">
                                Bookings
                            </a>
                        </li>
                        <li class="navbar__item">
                            <a href="/manage-payments" class="navbar__link">
                                Payments
                            </a>
                        </li>
                    </ul>
                </nav>

                <!-- Action -->
                <div class="header-action">
                    <a href="login" class="btn signup">Logout</a>
                </div>
            </div>
        </div>

        <!-- Filter form -->
        <form
            id="filter-form"
            class="popUp-form"
            action="/manage-rooms"
            method="GET"
            style="display: none"
        >
            <h2 class="subsection-title">Filter</h2>
            <div class="form-item">
                <label for="filterRoom">Room Number:</label>
                <input
                    class="form-input"
                    type="number"
                    id="filterRoom"
                    name="filterRoom"
                />
            </div>

            <div class="form-item">
                <label for="filterType">Type:</label>
                <input
                    class="form-input"
                    type="text"
                    id="filterType"
                    name="filterType"
                />
            </div>

            <div class="form-item">
                <label for="filterCapacity">Capacity:</label>
                <input
                    class="form-input"
                    type="number"
                    id="filterCapacity"
                    name="filterCapacity"
                />
            </div>

            <div class="form-item">
                <label for="filterPrice">Price:</label>
                <input
                    class="form-input"
                    type="number"
                    id="filterPrice"
                    name="filterPrice"
                />
            </div>

            <div class="form-item">
                <label for="filterStatus">Status:</label>
                <input
                    class="form-input"
                    type="text"
                    id="filterStatus"
                    name="filterStatus"
                />
            </div>

            <div class="form-item">
                <label for="filterManage">Manage:</label>
                <input
                    class="form-input"
                    type="text"
                    id="filterManage"
                    name="filterManage"
                />
            </div>

            <div class="form-item">
                <label for="orderBy">Order By:</label>
                <select class="form-input" name="orderBy" id="orderBy" size="1">
                    <option value="RoomNumber">Room Number</option>
                    <option value="Description">Type</option>
                    <option value="Capacity">Capacity</option>
                    <option value="Price">Price</option>
                    <option value="Status">Status</option>
                    <option value="Managed">Managed by</option>
                </select>
            </div>

            <div class="form-item">
                <label for="desc">Sort:</label>
                <select class="form-input" name="desc" id="desc" size="1">
                    <option value="ASC">ASC</option>
                    <option value="DESC">DESC</option>
                </select>
            </div>

            <div class="form-item">
                <button class="table-btn table-btn__add" type="submit">
                    Apply Filter
                </button>
                <button
                    class="table-btn table-btn__delete"
                    onclick="FilterClose()"
                >
                    Cancel
                </button>
            </div>
        </form>

        <!-- Add form -->
        <form
            id="add-form"
            class="popUp-form"
            method="POST"
            action="/add-room"
            style="display: none"
        >
            <h2 class="subsection-title">Add a Room</h2>

            <div class="form-item">
                <label for="RoomNumber">Room Number:</label>
                <input
                    class="form-input"
                    type="number"
                    id="RoomNumber"
                    name="RoomNumber"
                    required
                />
            </div>

            <div class="form-item">
                <label for="TypeID">Type ID:</label>
                <input
                    class="form-input"
                    type="text"
                    id="TypeID"
                    name="TypeID"
                    required
                />
            </div>

            <div class="form-item">
                <label for="Status">Status:</label>
                <input
                    class="form-input"
                    type="text"
                    id="Status"
                    name="Status"
                    required
                />
            </div>

            <div class="form-item">
                <button class="table-btn table-btn__add" type="submit">
                    Add Room
                </button>
                <button
                    class="table-btn table-btn__delete"
                    onclick="AddClose()"
                >
                    Cancel
                </button>
            </div>
        </form>

        <div class="container">
            <h1 class="section-title">Manage Rooms</h1>

            <!-- Top button Open-->
            <div class="top-btn__wrap">
                <!-- Filter button -->
                <button
                    class="top-btn table-btn"
                    id="filter-btn"
                    onclick="FilterOpen()"
                >
                    Filter
                </button>

                <!-- Add button -->
                <button
                    class="top-btn table-btn"
                    id="add-btn"
                    onclick="AddOpen()"
                >
                    Add User
                </button>
            </div>

            <main>
                <h2 class="subsection-title">Rooms List</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Room Number</th>
                            <th>Type</th>
                            <th>Capacity</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Managed By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.RoomNumber %></td>
                            <td><%= user.Description %></td>
                            <td><%= user.Capacity %></td>
                            <td><%= user.PricePerNight %></td>
                            <td><%= user.Status %></td>
                            <td><%= user.Name %></td>
                            <td>
                                <form method="GET" action="/edit-room">
                                    <input
                                        type="hidden"
                                        name="RoomNumber"
                                        value="<%= user.RoomNumber %>"
                                    />
                                    <button
                                        class="table-btn table-btn__add"
                                        type="submit"
                                    >
                                        Edit
                                    </button>
                                </form>
                                <form method="POST" action="/delete-room">
                                    <input
                                        type="hidden"
                                        name="UserID"
                                        value="<%= user.RoomNumber %>"
                                    />
                                    <button
                                        class="table-btn table-btn__delete"
                                        type="submit"
                                    >
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                        <!-- Add more rows as needed -->
                    </tbody>
                </table>
            </main>
        </div>
    </body>
</html>
