<!DOCTYPE html>
<html>
<head>
    <title>Guest Dashboard</title>
    <link rel="stylesheet" type="text/css" href="/css/guest-dashboard.css">
</head>
<body>
    <div class="guest-container">
        <header>
            <h1><a href="/guest">Dashboard</a></h1>
            <nav>
                <ul>
                    <li><a href="/guest-rooms">Rooms</a></li>
                    <li><a href="/guest-bookings">My Bookings</a></li>
                    <li><a href="/guest-payments">My Payments</a></li>
                    <li><a href="/guest-infos">Edit Info</a></li>
                    <li><a href="/login">Logout</a></li>
                </ul>
            </nav>
        </header>

        <main>
            <section id="rooms">
                <h2>Available Rooms</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Room Number</th>
                            <th>Type</th>
                            <th>Capacity</th>
                            <th>Price</th>
                            <th>Availability</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.RoomNumber %></td>
                                <td><%= user.Description %></td>
                                <td><%= user.Capacity %></td>
                                <td><%= user.PricePerNight %></td>
                                <td><%= user.Status %></td>
                                <td>
                                    <form method="GET" action="/reservation">
                                        <input type="hidden" name="RoomNumber" value="<%= user.RoomNumber %>">
                                        <button type="submit">Book Now</button>
                                    </form>
                                </td>
                            </tr>    
                        <% }) %>  
                        <!-- Add more available room rows as needed -->
                    </tbody>
                </table>
            </section>
        </main>
    </div>
</body>
</html>
