<!DOCTYPE html>
<html>
<head>
    <title>Guest Dashboard</title>
    <link rel="stylesheet" type="text/css" href="/css/guest-dashboard.css">
</head>
<body>
    <div class="guest-container">
        <header>
            <h1>Sigma Hotel</h1>
            <nav>
                <ul>
                    <li><a href="/guest-rooms">Rooms</a></li>
                    <li><a href="/guest-bookings">My Bookings</a></li>
                    <li><a href="/guest-payments">My Payments</a></li>
                    <li><a href="/guest-infos">Edit Info</a></li>
                    <li><a href="/login">Logout</a></li>
                </ul>
            </nav>
        </header>

        <main>
            <section id="bookings">
                <h2>My Bookings</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Booking ID</th>
                            <th>Room Number</th>
                            <th>Check-in Date</th>
                            <th>Check-out Date</th>
                            <th>Total Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.BookingID %></td>
                                <td><%= user.RoomNumber %></td>
                                <td><%= user.inDate %></td>
                                <td><%= user.outDate %></td>
                                <td><%= user.TotalPrice %></td>
                            </tr>    
                        <% }) %>
                        <!-- Add more bookings rows as needed -->
                    </tbody>
                </table>
            </section>
        </main>
    </div>
</body>
</html>
