<!DOCTYPE html>
<html>
<head>
    <title>Guest Dashboard</title>
    <link rel="stylesheet" type="text/css" href="/css/guest-dashboard.css">
</head>
<body>
    <div class="guest-container">
        <header>
            <h1><a href="/guest">Guest Dashboard</a></h1>
            <nav>
                <ul>
                    <li><a href="/guest">Rooms</a></li>
                    <li><a href="/guest-bookings">My Bookings</a></li>
                    <li><a href="/guest-payments">My Payments</a></li>
                    <li><a href="/guest-infos">Edit Info</a></li>
                    <li><a href="/login">Logout</a></li>
                </ul>
            </nav>
        </header>

        <main>
            <section id="payments">
                <h2>My Payments</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Payment ID</th>
                            <th>Booking ID</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Method</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.PaymentID %></td>
                                <td><%= user.BookingID %></td>
                                <td><%= user.Amount %></td>
                                <td><%= user.PDate %></td>
                                <td><%= user.PaymentMethod %></td>
                            </tr>    
                        <% }) %>
                        <!-- Add more payments rows as needed -->
                    </tbody>
                </table>
            </section>
        </main>
    </div>
</body>
</html>
